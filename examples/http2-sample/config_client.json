{
  "servers":[
     {
       "default_log_path":"stdout",
       "listeners":[
	  	{
	    "name":"clientListener",
	    "address": "127.0.0.1:2045",
	    "bind_port": true,
	    "log_path": "stdout",
	    "filter_chains": [{
	       "tls_context":{},
	       "filters": [{
	           "type": "proxy",
		   "config": {
		      "downstream_protocol": "Http2",
		      "upstream_protocol": "Http2",
		      "virtual_hosts":[{
		         "name":"clientHost",
			 "domains": ["*"],
			 "routers": [
			    {
			      "match":{"prefix":"/"},
			      "route":{"cluster_name":"clientCluster"}
			    }
			 ]
		      }]
		   }
	       }]
	    }]
	  }]
     }
  ],
  "cluster_manager":{     
     "clusters":[
	{
	  "Name": "clientCluster",
	  "type": "SIMPLE",
	  "lb_type": "LB_RANDOM",
	  "max_request_per_conn": 1024,
	  "conn_buffer_limit_bytes":32768,
	  "hosts":[
	     {"address":"127.0.0.1:2046"}
	  ]
	}
     ]
  }
}
